{
	"name": "fastify-starter",
	"version": "1.0.0",
	"type": "module",
	"description": "",
	"main": "index.js",
	"scripts": {
		"dev": "tsx watch src/server.ts",
		"dev:debug": "tsx watch --inspect=9320 src/server.ts",
		"build": "tsc",
		"start": "node dist/server.js",
		"test": "vitest",
		"test:watch": "vitest --watch",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage",
		"lint": "eslint src --ext .ts",
		"lint:fix": "eslint src --ext .ts --fix",
		"format": "prettier --write \"{src,tests}/**/*.ts\"",
		"format:check": "prettier --check \"{src,tests}/**/*.ts\"",
		"type-check": "tsc --noEmit",
		"docker:build": "docker build -f docker/Dockerfile -t fastify-enterprise-api .",
		"docker:run": "docker run -p 3001:3000 fastify-enterprise-api",
		"docker:compose": "docker compose up --build -d",
		"docker:down": "docker compose down"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"packageManager": "pnpm@10.15.0",
	"dependencies": {
		"@fastify/cors": "^11.1.0",
		"@fastify/rate-limit": "^10.3.0",
		"@fastify/swagger": "^9.5.1",
		"@fastify/swagger-ui": "^5.2.3",
		"dotenv": "^17.2.1",
		"fastify": "^5.5.0",
		"fastify-plugin": "^5.0.1",
		"pino": "^9.9.0"
	},
	"devDependencies": {
		"@eslint/js": "^9.34.0",
		"@types/node": "^24.3.0",
		"@typescript-eslint/eslint-plugin": "^8.40.0",
		"@typescript-eslint/parser": "^8.40.0",
		"eslint": "^9.34.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-prettier": "^5.5.4",
		"nodemon": "^3.1.10",
		"pino-pretty": "^13.1.1",
		"prettier": "^3.6.2",
		"tsc-alias": "^1.8.16",
		"tsx": "^4.20.5",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.40.0",
		"vitest": "^3.2.4"
	}
}
